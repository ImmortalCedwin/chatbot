                        <input type = "button" class = "debug_btn" id = "debug_btn" value = "Debug">
                        <input type = "button" class = "email_generator_btn" id = "email_generator_btn" value = "Email Generator">
                        <input type = "button" class = "sign_out_btn" id = "sign_out_btn" value = "Sign Out">
