            <div class = "debug_box" id = "debug_box">
                <div class = "debug_code">
                    <textarea id = "debug_code_text" placeholder = "Enter Code Here: "></textarea>
                </div>
                <div class = "debug_solution">
                    <textarea id = "debug_solution_text" placeholder = "Result Will Appear Here" readonly></textarea>
                </div>
                <input type = "button" id = "submit_btn" value = "Submit">
                <input type = "button" id = "clear_btn" value = "Clear">
                <input type = "button" id = "copy_btn" value = "Copy">
            </div>

            <div class = "email_box" id = "email_box">
                <div class = "email_prompt_box">
                    <input type = "text" id = "email_prompt" placeholder = "Enter Email Prompt">
                </div>
                <div class = "email_style">
                    <label class = "email_label">Email Style</label>
                    <input type = "button" class = "email_options_btn" id = "style_professional" value = "Professional">
                    <input type = "button" class = "email_options_btn" id = "style_casual" value = "Casual">
                    <input type = "button" class = "email_options_btn" id = "style_informational" value = "Informational">
                    <input type = "button" class = "email_options_btn" id = "style_funny" value = "Funny">
                </div>
                <div class = "email_length">
                    <label class = "email_label">Email Length</label>
                    <input type = "button" class = "email_options_btn" id = "length_short" value = "Short">
                    <input type = "button" class = "email_options_btn" id = "length_medium" value = "Medium">
                    <input type = "button" class = "email_options_btn" id = "length_long" value = "Long">
                </div>
                <div class = "email_result_box" id = "email_result_box">
                    <textarea id = "email_result" placeholder = "The Generated Email Will Appear Here" readonly></textarea>
                </div>
            </div>
            

            <div class = "side_bar">
                <div class = "menu">
                    <input type = "button" id = "home_btn" value = "Home"><br>
                    <label class = "chat_mode" for = "select_mode" id = "chat_mode">Chat Mode</label>
